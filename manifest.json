{
    "manifest_version": 2,
    "name": "ChatGPT Prompt Counter",
    "version": "1.0",
    "description": "Counts the number of prompts sent to ChatGPT within a 3-hour period",
    "permissions": [
        "webRequest",
        "*://chat.openai.com/*",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}
